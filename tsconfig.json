{
  "compilerOptions": {
    "allowJs": true,
    "target": "es2019",
    "module": "commonjs",
    "lib": ["dom","es2019","es6"],
    "outDir": "dist",
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "sourceMap": true
  },
  "types": ["node", "koa"],
  "includes": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
